import "include/imported.sat";

attribute ignore;
attribute name { string first; int32 second; int32 third = 7; }
attribute reference { type type; }

[ignore, name("Toby", second = -2)]
[reference(int32)]
struct test
{
    [ignore] int32 field;
}

[reference(test)]
enum enum
{
    [ignore, name("Item")] item
}

